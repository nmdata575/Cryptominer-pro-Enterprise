# CryptoMiner Pro V30 - Backend Configuration Template
# Copy this file to .env and update values for your environment

# Database Configuration
MONGO_URL=mongodb://localhost:27017/crypto_miner_db
DATABASE_NAME=crypto_miner_db

# Remote Database Options (Enterprise)
REMOTE_DB_ENABLED=false
REMOTE_MONGO_URL=mongodb://your-remote-server:27017/crypto_miner_db

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3333"]

# Mining Configuration
DEFAULT_SCRYPT_N=1024
DEFAULT_SCRYPT_R=1
DEFAULT_SCRYPT_P=1

# Enterprise Database Options
ENTERPRISE_DB_HOST=localhost
ENTERPRISE_DB_PORT=27017
ENTERPRISE_DB_NAME=crypto_miner_enterprise
ENTERPRISE_DB_USER=
ENTERPRISE_DB_PASS=

# Thread Management
DEFAULT_THREADS=4
MAX_THREADS=128
THREAD_SCALING_ENABLED=true
MAX_THREAD_DENSITY=1.0

# Enterprise Mode
ENTERPRISE_MODE=true

# Logging
LOG_LEVEL=INFO