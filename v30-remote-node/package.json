{
  "name": "cryptominer-v30-remote-node",
  "version": "1.0.0",
  "description": "CryptoMiner Enterprise V30 Remote Mining Node",
  "main": "v30_remote_node.py",
  "type": "mining-node",
  "architecture": "distributed",
  "compatibility": {
    "v30_server": ">=30.0.0",
    "python": ">=3.8.0",
    "os": ["linux"]
  },
  "requirements": {
    "minimum": {
      "cpu_cores": 2,
      "ram_gb": 2,
      "network_mbps": 100,
      "storage_gb": 5
    },
    "recommended": {
      "cpu_cores": 8,
      "ram_gb": 8,
      "network_mbps": 1000,
      "storage_gb": 20
    },
    "enterprise": {
      "cpu_cores": 32,
      "ram_gb": 64,
      "network_mbps": 1000,
      "storage_gb": 100
    }
  },
  "features": [
    "distributed_mining",
    "automatic_updates",
    "license_validation",
    "gpu_detection",
    "load_balancing",
    "real_time_monitoring",
    "systemd_integration"
  ],
  "installation": {
    "method": "script",
    "installer": "install.sh",
    "user": "v30miner",
    "directory": "/opt/cryptominer-v30-node",
    "service": "cryptominer-v30-node"
  },
  "network": {
    "protocol": "v30_custom",
    "default_port": 9001,
    "compression": true,
    "encryption": true
  },
  "logging": {
    "levels": ["INFO", "WARNING", "ERROR"],
    "rotation": true,
    "max_size_mb": 100
  },
  "update_info": {
    "auto_update": true,
    "update_server": "central_v30_server",
    "check_interval": 3600,
    "update_url": "/api/v30/updates/remote-node"
  },
  "build_info": {
    "build_date": "2025-01-08",
    "build_number": "001",
    "git_commit": "initial",
    "target_platforms": [
      "ubuntu-18.04+",
      "debian-10+", 
      "centos-7+",
      "rhel-7+",
      "rocky-8+",
      "fedora-35+"
    ]
  },
  "dependencies": {
    "python": [
      "psutil>=5.9.0",
      "asyncio",
      "aiofiles",
      "requests",
      "cryptography"
    ],
    "system": [
      "python3",
      "python3-pip",
      "python3-venv",
      "systemd",
      "curl",
      "wget"
    ]
  },
  "configuration": {
    "config_file": "node_config.json",
    "config_path": "/opt/cryptominer-v30-node/node_config.json",
    "required_fields": [
      "server_host",
      "server_port", 
      "license_key"
    ],
    "optional_fields": [
      "max_cpu_threads",
      "enable_gpu",
      "heartbeat_interval",
      "work_request_interval",
      "auto_update",
      "update_check_interval"
    ]
  },
  "security": {
    "user_permissions": "restricted",
    "config_permissions": "600",
    "log_permissions": "644",
    "network_mode": "client_only"
  },
  "support": {
    "documentation": "README.md",
    "log_location": "/opt/cryptominer-v30-node/logs/",
    "status_command": "systemctl status cryptominer-v30-node",
    "debug_script": "/opt/cryptominer-v30-node/status.sh"
  }
}